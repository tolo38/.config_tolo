#! /bin/bash
output=""
for files in $(diff -rq $1 $2|grep 'differ$'|sed "s/^Files //g;s/ differ$//g;s/ and /:/g"); do
    output="$output\n ${files%:*} \t ${files#*:}";
    printf "%-80s %-80s\n" "${files%:*}" "${files#*:}";
done
echo -e $output | column -t
for files in $(diff -rq $1 $2|grep 'differ$'|sed "s/^Files //g;s/ differ$//g;s/ and /:/g"); do
        while true; do
                echo
                echo ${files%:*} ${files#*:};
                read -p "Open - Pass - Quite (o/p/q)?" -n 1 -r
                case "$REPLY" in
                        o )
                                vimdiff ${files%:*} ${files#*:}
                                break;;
                        p ) break;;
                        q ) break 2;;
                        * ) echo "invalid";;
                esac
        done
done
